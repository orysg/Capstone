// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python



// https://containers.dev/implementors/json_reference/

{
	"name": "front-guard-dev",

	"image": "node:20.17.0-alpine3.20", // "node:20.17.0-alpine3.20"

	"workspaceMount": "source=${localWorkspaceFolder},target=/workspace/Capstone,type=bind,consistency=cached",
	"workspaceFolder": "/workspace/Capstone",

	"features": {
		"ghcr.io/cirolosapio/devcontainers-features/alpine-ohmyzsh:0": {},
		"ghcr.io/cirolosapio/devcontainers-features/alpine-git:0": {},
		"ghcr.io/cirolosapio/devcontainers-features/alpine-docker-outside-of-docker:0": {}
	},

	"forwardPorts": [
		3000, // frontend
		4000, // backend
		5432, // db
		80 // nginx
	],

	// "shutdownAction": "stopCompose",

    "customizations": {
        "vscode": {
          "extensions": [
            "dbaeumer.vscode-eslint"
        ]
        }
    }
    

	// "postCreateCommand": "",

	// "runArgs": ["--env-file", ".devcontainer/devcontainer.env.example"]

	// "customizations": {},

	// "remoteUser": "root"
}
