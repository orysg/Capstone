{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Docker Images",
            "type": "shell",
            "command": "docker compose build",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Fresh Restart Docker",
            "type": "shell",
            "command": "docker compose up --force-recreate",
            "group": "build",
            "dependsOn": "Stop and Remove Containers",
            "problemMatcher": []
        },
        {
            "label": "Start Docker Containers",
            "type": "shell",
            "command": "docker compose up -d",
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "Stop Docker Containers",
            "type": "shell",
            "command": "docker compose down",
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "Stop and Remove Containers",
            "type": "shell",
            "command": "docker-compose down --remove-orphans",
            "problemMatcher": []
        },
        {
            "label": "Install yarn dependencies",
            "type": "shell",
            "command": "yarn install --cwd frontend && yarn install --cwd backend",
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "Backend Container CLI",
            "type": "shell",
            "command": "docker exec -it front-guard-backend-1 ash",
            "group": "none",
            "problemMatcher": []
        }
    ]
}